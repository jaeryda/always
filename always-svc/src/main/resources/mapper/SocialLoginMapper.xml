<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.always.mapper.SocialLoginMapper">

    <resultMap id="SocialLoginResultMap" type="com.always.entity.SocialLogin">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="provider" column="provider"/>
        <result property="providerUserId" column="provider_user_id"/>
        <result property="email" column="email"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- provider와 providerUserId로 조회 -->
    <select id="findByProviderAndProviderUserId" resultMap="SocialLoginResultMap">
        SELECT id, user_id, provider, provider_user_id, email, created_at, updated_at
        FROM social_logins
        WHERE provider = #{provider} AND provider_user_id = #{providerUserId}
    </select>

    <!-- provider와 email로 조회 -->
    <select id="findByProviderAndEmail" resultMap="SocialLoginResultMap">
        SELECT id, user_id, provider, provider_user_id, email, created_at, updated_at
        FROM social_logins
        WHERE provider = #{provider} AND email = #{email}
    </select>

    <!-- user_id로 조회 -->
    <select id="findByUserId" resultMap="SocialLoginResultMap">
        SELECT id, user_id, provider, provider_user_id, email, created_at, updated_at
        FROM social_logins
        WHERE user_id = #{userId}
    </select>

    <!-- 저장 -->
    <insert id="insert" parameterType="com.always.entity.SocialLogin" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO social_logins (user_id, provider, provider_user_id, email, created_at, updated_at)
        VALUES (#{userId}, #{provider}, #{providerUserId}, #{email}, #{createdAt}, #{updatedAt})
    </insert>

    <!-- 삭제 -->
    <delete id="deleteById" parameterType="Long">
        DELETE FROM social_logins WHERE id = #{id}
    </delete>

    <!-- user_id로 삭제 -->
    <delete id="deleteByUserId" parameterType="Long">
        DELETE FROM social_logins WHERE user_id = #{userId}
    </delete>

</mapper>

